{
  "name": "sveltebase",
  "description": "Svelte/Sapper & Firebase boilerplate.",
  "version": "0.0.2",
  "scripts": {
    "dev": "sapper dev --live=false",
    "prebuild-nix": "rm -rf functions/__sapper__/build && mkdir -p functions/__sapper__/build",
    "prebuild": "rimraf - functions/__sapper__/build && mkdirp functions/__sapper__/build",
    "build-nix": "sapper build --legacy && cp -R ./__sapper__/build ./functions/__sapper__",
    "build": "sapper build --legacy && ncp ./__sapper__/build ./functions/__sapper__/build",
    "export": "sapper export --legacy",
    "start": "npm run build && firebase serve",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "predeploy": "npm run build",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "firebase": "^9.5.0",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.16.0",
    "materialize-css": "^1.0.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "@google-cloud/translate": "^6.3.1",
    "sickspack": "file:../../_packages/sickspack"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/runtime": "^7.16.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "esm": "^3.2.25",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "postcss-load-config": "^3.1.0",
    "postcss-preset-env": "^7.0.1",
    "rollup": "^2.60.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.3",
    "svelte": "^3.44.2",
    "svelte-preprocess": "^4.9.8"
  }
}
